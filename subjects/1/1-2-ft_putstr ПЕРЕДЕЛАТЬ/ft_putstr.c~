#include <unistd.h>

void	ft_putstr(char *str)
{
	int i;

	i = 0;
	while (str != '\0')
	{
		write(1, &str[i], 1);
		i++;
	}
}

int		main(void)
{
	char *str = "Update\0";
	ft_putstr(str);
}
